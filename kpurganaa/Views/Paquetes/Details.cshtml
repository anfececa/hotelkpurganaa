@model kpurganaa.Models.Paquete

@{
    ViewData["Title"] = "Details";
}
<div class="vh-100 d-flex justify-content-center" style="background-image: url(/img/6f38d4573ea286a2.png);background-size:cover">
    <div class="card  border-0" style="max-width: 50%; margin-top:3.5cm; max-height:45%;background-image: url(/img/descarga.png);background-size:cover">
        <div class="card-header text-center" style="background-color:burlywood">
            <h1>Details</h1>
            <h4>Paquete</h4>
        </div>
        <dl class="row card-body m-auto" style="background-color:lightgoldenrodyellow;">
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.NombrePaquete)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.NombrePaquete)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.PrecioTotal)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.PrecioTotal)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.IdHabitacionNavigation)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.IdHabitacionNavigation.IdHabitacion)
            </dd>
        </dl>
        <div class="card-footer text-center " style="background-color:burlywood;">
            <a asp-action="Edit" asp-route-id="@Model?.IdPaquete"></a> 
            <a asp-action="Index" class="bi bi-arrow-bar-left btn-danger btn btn-primary text-black btn-sm"></a>
        </div>
    </div>
</div>