@model kpurganaa.Models.Reserva

@{
    ViewData["Title"] = "Details";
}



<div class="vh-100 d-flex justify-content-center" style="background-image: url(/img/6f38d4573ea286a2.png);background-size:cover">
    <div class="card  border-0" style="max-width: 50%; margin-top:3.5cm; max-height:45%;background-image: url(/img/descarga.png);background-size:cover">
        <div class="card-header text-center" style="background-color:burlywood">
            <h1>Details</h1>
            <h4>Reserva</h4>
       </div>
  
        <dl class="row card-body m-auto" style="background-color:lightgoldenrodyellow;">
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.FechaReserva)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.FechaReserva)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.FechaInicio)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.FechaInicio)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.FechaFin)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.FechaFin)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.NroPersonas)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.NroPersonas)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.MontoTotal)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.MontoTotal)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.Abono)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.Abono)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.EstadoReserva)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.EstadoReserva)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.IdPaqueteNavigation)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.IdPaqueteNavigation.IdPaquete)
            </dd>
            <dt class = "col-sm-6">
                @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.IdUsuarioNavigation.IdUsuario)
            </dd>
        </dl>
        <div class="card-footer text-center " style="background-color:burlywood;">
            <a asp-action="Edit" asp-route-id="@Model?.IdReserva" class="bi bi-pen btn-warning btn btn-primary btn-sm"></a>
            <a asp-action="Index" class="bi bi-arrow-bar-left btn-danger btn btn-primary text-black btn-sm"></a>
        </div>
    </div>
</div>
