@model IEnumerable<kpurganaa.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}
<div class="vh-100">
    <div>
        <h1 class="text-center">Index</h1>
        <p class="text-center">
            <a asp-action="Create" class="bi bi-file-plus btn btn-success">Create New</a>
        </p>
    </div>
    <table class="table table-striped table-sm table-hover">
        <thead class=" table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FechaReserva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NroPersonas)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MontoTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Abono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EstadoReserva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdPaqueteNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table">
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReserva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NroPersonas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Abono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoReserva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPaqueteNavigation.IdPaquete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.IdUsuario)
                </td>
                <td>
                    <div>
                            <a asp-action="Edit" asp-route-id="@item.IdReserva" class="bi bi-pen  btn btn-primary btn-warning text-black"></a>
                            <a asp-action="Details" asp-route-id="@item.IdReserva" class="bi bi-file-earmark-zip  btn btn-primary text-black"></a>
                            <a asp-action="Delete" asp-route-id="@item.IdReserva" class="bi bi-archive  btn btn-danger text-black"></a>
                    </div>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>