@model kpurganaa.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<div class="vh-100 d-flex justify-content-center" style="background-image: url(/img/6f38d4573ea286a2.png);background-size:cover">
    <div class="card  border-0" style="max-width: 50%; margin-top:3.5cm; max-height:45%;background-image: url(/img/descarga.png);background-size:cover">
        <div class="card-header text-center" style="background-color:burlywood">
            <h1>Editar</h1>
            <h4>Usuario</h4>
        </div>
        <form asp-action="Edit" class="row card-body m-auto" style="background-color:lightgoldenrodyellow;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUsuario" />
            <div class="form-group">
                <label asp-for="CorreoUsuario" class="control-label"></label>
                <input asp-for="CorreoUsuario" class="form-control" />
                <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveUsuario" class="control-label"></label>
                <input asp-for="ClaveUsuario" class="form-control" />
                <span asp-validation-for="ClaveUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPersonas" class="control-label visually-hidden"></label>
                <select asp-for="IdPersonas" class="form-control visually-hidden" asp-items="ViewBag.IdPersonas"></select>
                <span asp-validation-for="IdPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRol" class="control-label visually-hidden"></label>
                <select asp-for="IdRol" class="form-control visually-hidden" asp-items="ViewBag.IdRol"></select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>
            <div class="card-footer text-center " style="background-color:lightgoldenrodyellow;">
                <input type="submit" value="Guardar" class=" btn-success  btn  text-black btn-sm" />
                <a asp-action="Index" class="bi bi-arrow-bar-left btn-danger btn  text-black btn-sm"></a>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
