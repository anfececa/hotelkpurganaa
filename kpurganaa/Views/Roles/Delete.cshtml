@model kpurganaa.Models.Role

@{
    ViewData["Title"] = "Delete";
}

<div class="vh-100 d-flex justify-content-center" style="background-image: url(/img/6f38d4573ea286a2.png);background-size:cover">
    <div class="card  border-0" style="max-width: 50%; margin-top:3.5cm; max-height:45%;background-image: url(/img/descarga.png);background-size:cover">
        <div class="card-header text-center" style="background-color:burlywood">
            <h1>Delete</h1>
            <h3>Are you sure you want to delete this?</h3>
            <h4>Role</h4>
        </div>
        <dl class="row card-body m-auto" style="background-color:lightgoldenrodyellow;">
            <dt class = "col">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class = "col">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </dl>
        <form asp-action="Delete" class="card-footer text-center " style="background-color:burlywood;">
            <input type="hidden" asp-for="IdRol" />
            <input type="submit" value="Delete" class="btn btn-danger  btn  text-black btn-sm" />
            <a asp-action="Index" class="bi bi-arrow-bar-left btn-danger btn  text-black btn-sm"></a>
        </form>
    </div>
</div>