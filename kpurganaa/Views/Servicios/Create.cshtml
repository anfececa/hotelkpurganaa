@model kpurganaa.Models.Servicio

@{
    ViewData["Title"] = "Create";
}

<div class="vh-100 d-flex justify-content-center" style="background-image: url(/img/6f38d4573ea286a2.png);background-size:cover">
    <div class="card  border-0" style="max-width: 50%; margin-top:3.5cm; max-height:45%;background-image: url(/img/descarga.png);background-size:cover">
        <div class="card-header text-center" style="background-color:burlywood">
            <h1>Create</h1>
            <h4>Servicio</h4>
        </div>
        <form asp-action="Create" class="row card-body m-auto" style="background-color:lightgoldenrodyellow;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreServicio" class="control-label"></label>
                <input asp-for="NombreServicio" class="form-control" />
                <span asp-validation-for="NombreServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionServicio" class="control-label"></label>
                <input asp-for="DescripcionServicio" class="form-control" />
                <span asp-validation-for="DescripcionServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioServicio" class="control-label"></label>
                <input asp-for="PrecioServicio" class="form-control" />
                <span asp-validation-for="PrecioServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoServicio" class="control-label"></label>
                <input asp-for="EstadoServicio" class="form-control" />
                <span asp-validation-for="EstadoServicio" class="text-danger"></span>
            </div>
            <div class="card-footer text-center " style="background-color:lightgoldenrodyellow;">
                <input type="submit" value="Create" class="bi bi-file-plus btn btn-success btn-sm" />
                <a asp-action="Index" class="bi bi-arrow-bar-left btn-danger btn  text-black btn-sm"></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
