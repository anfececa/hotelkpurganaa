@model IEnumerable<kpurganaa.Models.Servicio>

@{
    ViewData["Title"] = "Index";
}
<div class="vh-100">
    <div>
        <h1 class="text-center">Index</h1>
        <p class="text-center">
            <a asp-action="Create" class="bi bi-file-plus btn btn-success">Create New</a>
        </p>
    </div>
    <table class="table table-striped table-sm table-hover">
        <thead class=" table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreServicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DescripcionServicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecioServicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EstadoServicio)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table">
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreServicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescripcionServicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioServicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoServicio)
                </td>
                <td> 
                    <div>
                            <a asp-action="Edit" asp-route-id="@item.IdServicio" class="bi bi-pen  btn btn-primary btn-warning text-black"></a>
                            <a asp-action="Details" asp-route-id="@item.IdServicio" class="bi bi-file-earmark-zip  btn btn-primary text-black"></a>
                            <a asp-action="Delete" asp-route-id="@item.IdServicio" class="bi bi-archive  btn btn-danger text-black"></a>
                     </div>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
